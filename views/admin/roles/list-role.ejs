<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<head>
    <% include ./../layouts/head %>
</head>
<body class="container">

<!-- Header -->
<header>
    <% include ./../layouts/header %>
</header>

<main>
    <div class="container">
        <a class="btn btn-primary" href="/admin/role/add">New Role</a>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Name</th>
                    <th>Action</th>
				</tr>
			</thead>
			<tbody>
				<% roles.forEach(function(role){ %>
				<tr>
					<td><a href="/admin/role/edit/<%= role._id %>"><%= role.name %></a></td>
                    <td><a class="btn btn-primary" href="/admin/role/del/<%= role._id %>">Del</a></td>
				</tr>
				<% }); %>
			</tbody>
		</table>
	</div>
</main>

<!-- Footer -->
<footer>
    <% include ./../layouts/footer %>
</footer>

</body>
</html>